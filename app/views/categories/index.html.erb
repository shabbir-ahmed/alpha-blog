<h1 align="center">Listing all categories</h1>

<% @categories.each do |category| %>
    <ul class="listing">
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li class="article-title">
                    <%= link_to "#{category.name}", category_path(category) %>
                    <% if logged_in? && current_user.admin? %>
                        <div class="article-actions">
                            <%= link_to "Edit this article", edit_category_path(category), class: "btn btn-xs btn-primary" %>
                            <%= link_to "Delete this article", category_path(category), method: :delete,data: { confirm: "Are you sure you want to delete the article?"},class: "btn btn-xs btn-danger" %>
                        </div>
                    <% end %>
                </li>
            </div>
        </div>
    </ul>
<% end %>
